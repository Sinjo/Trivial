<resources>
    <string name="app_name">Trivial</string>
    
    <!-- Home screen -->
    <!-- Number of questions to be asked in this quiz -->
    <string name="number_of_questions">Number of questions:</string>
    <!-- Displayed on the button which begins the quiz when clicked -->
    <string name="start_quiz">Start Quiz</string>
    
    <!-- Displayed during the course of a quiz -->
    <!-- Question answered correctly -->
    <string name="answer_correct">Correct!</string>
    <!-- Question answered incorrectly -->
    <string name="answer_incorrect">Incorrect!</string>
    
    <!-- Displayed at the end of a quiz -->
    <!-- End of quiz header -->
    <string name="quiz_end_header">End of Quiz</string>
    <!-- Number of correct answers header -->
    <string name="correct_answers_header">Correct</string>
    <!-- Number of incorrect answers header -->
    <string name="incorrect_answers_header">Incorrect</string>
    <!-- End of quiz accept button -->
    <string name="quiz_end_accept_button">Return to main menu</string>
    
    <!-- Error strings -->
    
    <!-- Invalid input for number of questions -->
    <string name="invalid_number_of_questions">The number of questions specified was invalid.</string>
    <!-- Problem while loading the questions from the asset files -->
    <string name="question_reading_exception">A problem was encountered while loading the questions, and has been logged. Please send the developer a bug report including log output.</string>
	<!-- Number of strings that could not be parsed -->
	<plurals name="question_reading_parse_fail_number">
        <item quantity="one">1 question could not be parsed, and has been logged. Please send the developer a bug report including log output.</item>
        <item quantity="other">%1$d questions could not be parsed, and have been logged. Please send the developer a bug report including log output.</item>
    </plurals>

</resources>
